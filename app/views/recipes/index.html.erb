<body>
  <div class="row">
  <div class="col-md-12 col-sm-12" align="right">
    <%= link_to "Voltar", root_path %>
  </div>
</div>
  <div class="section">
    <div class="container">
      <div class="row">
        <% @recipes.each do |recipe| %>
        <div class="col-md-4">
          <%= image_tag recipe.avatar.url, size: "250x250", :class=> "images-things"%>
          <h1><%= link_to recipe.name, recipe%></h1>
          <p><%= recipe.description %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</body>